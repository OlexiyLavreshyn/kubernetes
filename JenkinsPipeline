pipeline {
    agent any

    environment {
        GIT_URL = 'https://github.com/yourusername/yourrepository.git'
        CREDENTIAL_ID = 'mykubeconfig'
    }

    stages {
        stage('Clone Git Repository') {
            steps {
                script {
                    git credentialsId: 'jenkins-git-credentials', url: GIT_URL
                }
            }
        }

        stage('Push index.html') {
            steps {
                script {
                    sh 'echo "<html><body><h1>Hello, World!</h1></body></html>" > index.html'
                    sh 'git add index.html'
                    sh 'git commit -m "Adding index.html"'
                    sh 'git push'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
